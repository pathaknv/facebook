%h1 Welcome to Facebook
%p= link_to('Sign Up', new_user_path)
%table
  - @users.each do |user|
    %tr
      %td #{link_to(user.name, user_path(user))}
      %td #{link_to('Edit', edit_user_path(user))}
      %td #{link_to('Delete', user_path(user), method: 'DELETE', data: { confirm: 'Are you sure?' })}
